<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="de.blogsiteloremipsum.gamingbets.activity.ProfileActivity"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="1">

        <ImageButton
            android:layout_width="181dp"
            android:layout_height="153dp"
            android:id="@+id/img_profilePic"
            android:src="@drawable/abc_switch_track_mtrl_alpha" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="UserName"
            android:id="@+id/txt_userName"
            android:layout_gravity="center"
            android:autoText="false"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:text="Hi IÂ´m a super cool dude!"
            android:id="@+id/txt_description"
            android:layout_gravity="center_horizontal" />


    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Score:"
            android:id="@+id/txt_Score"
            android:layout_weight="0.61"
            android:gravity="center"
            android:layout_gravity="left" />

        <TextView
            android:layout_width="88dp"
            android:layout_height="match_parent"
            android:id="@+id/txt_score_value"
            android:layout_gravity="right"
            android:layout_weight="0.21" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:gravity="bottom|right">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:id="@+id/btn_edit"
            android:clickable="false" />

    </LinearLayout>
</LinearLayout>
